@*@model IEnumerable<ViewModel_MultiModelInOneView.Models.SchoolViewModel>*@
@model ViewModel_MultiModelInOneView.Models.SchoolViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
<div class="container">
    @{
        if (Model.Students.Any())
        {
            <h6>Students Table - </h6>
            <table class="table table-bordered table-info table-hover table-striped">
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Gender
                    </th>
                    <th>
                        Standard
                    </th>
                </tr>
                @foreach (var item in Model.Students)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Gender</td>
                        <td>@item.Standard</td>
                    </tr>
                }

            </table>
            <br />
            <br />
        }
        else
        {
            <h5>No Student Found</h5>
        }
    }

    @{
        if (Model.Students.Any())
        {
            <h6>Teachers Table - </h6>
            <table class="table table-bordered table-info table-hover table-striped">
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Qualification
                    </th>
                    <th>
                        Salary
                    </th>
                </tr>
                @foreach (var item in Model.Teachers)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.TeacherName</td>
                        <td>@item.Qualification</td>
                        <td>@item.Salary</td>
                    </tr>
                }
            </table>
        }
    }
    else
    {
    <h5>No Teacher Found</h5>
    }
</div>
