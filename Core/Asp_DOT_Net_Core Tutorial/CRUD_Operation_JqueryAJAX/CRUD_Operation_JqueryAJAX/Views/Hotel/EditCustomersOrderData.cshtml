@model CRUD_Operation_JqueryAJAX.Models.HotelModel

@{
    ViewData["Title"] = "EditCustomersOrderData";
}

<style>
    img {
        height: 71px;
        width: 71px;
        padding: 5px;
    }

    .card-header {
        background-color: #b8daff;
    }
</style>

<section>
    <div class="row">
        <div class="col-lg-12">
            <a class="btn btn-primary mb-2 float-end" asp-controller="Hotel" asp-action="GetHotelData">Back to List</a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h2>Edit Customer Order</h2>
        </div>
        <div class="card-body">
            <form asp-action="EditCustomersOrderData" asp-controller="Hotel" method="post" enctype="multipart/form-data" autocomplete="off">
                <div class="form-group">
                    <input type="hidden" asp-for="CustomerId" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-lg-6">
                            <label asp-for="CustomerName"></label>
                            <input type="text" class="form-control" id="txtCustName" asp-for="CustomerName" placeholder="please enter customer name">
                            <span asp-validation-for="CustomerName" class="text-danger"></span>
                        </div>
                        <div class="col-lg-6">
                            <label asp-for="DishName"></label>
                            <input type="text" class="form-control" id="txtDishName" asp-for="DishName" placeholder="please enter dish name">
                            <span asp-validation-for="DishName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-lg-6">
                            <label asp-for="Quantity"></label>
                            <input type="number" class="form-control" id="txtQuantity" asp-for="Quantity" min="1" max="200">
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>
                        <div class="col-lg-4">
                            <label asp-for="DishImage"></label>
                            <input type="file" class="form-control" id="Photo" asp-for="DishImage" value="@Model.DishImageName">
                            <span asp-validation-for="DishImage" class="text-danger"></span>
                        </div>
                        <div class="col-lg-2">
                            <input type="hidden" asp-for="DishImageName" />
                            <div class="form-group">
                                <label>Image Name:</label>
                                @Model.DishImage?.FileName
                            </div>
                            <img src="~/Images/@Model.DishImageName" alt="dishImage" />
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-lg-6">
                            <label asp-for="Amount"></label>
                            <input type="number" class="form-control" id="txtAmount" asp-for="Amount" min="100" max="100000">
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mt-2 float-end">
                        <div class="col-lg-12">
                            <input type="submit" class="btn btn-primary float-right" value="Update" />
                        </div>

                    </div>
                    @Html.Hidden("OrderDate",Model.OrderDate)
                </div>
            </form>
        </div>

    </div>

</section>



